<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.sistemagestionhospital.viewController.PacienteViewController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Label text="ID del Paciente" />
                <TextField fx:id="txtId" promptText="Ingrese ID" />

                <Label text="Nombre" />
                <TextField fx:id="txtNombre" promptText="Ingrese Nombre" />

                <Label text="Correo" />
                <TextField fx:id="txtCorreo" promptText="Ingrese Correo" />

                <Label text="Contraseña" />
                <TextField fx:id="txtContrasena" promptText="Ingrese Contraseña" />

                <Label text="Cédula" />
                <TextField fx:id="txtCedula" promptText="Ingrese Cédula" />

                <Button mnemonicParsing="false" onAction="#registrarPaciente" text="Registrar Paciente" />
            </children>
        </VBox>
    </children>
</AnchorPane>