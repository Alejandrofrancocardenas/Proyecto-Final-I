<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.sistemagestionhospital.viewController.HorarioViewController" alignment="CENTER" prefWidth="400">
    <Label text="Gestión de Horarios de Consulta" style="-fx-font-size: 18px; -fx-font-weight: bold"/>

    <ListView fx:id="listaHorarios" prefHeight="150"/>

    <HBox spacing="10">
        <TextField fx:id="txtDia" promptText="Día (Ej: LUNES)"/>
        <TextField fx:id="txtInicio" promptText="Hora Inicio (HH:mm)"/>
        <TextField fx:id="txtFin" promptText="Hora Fin (HH:mm)"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Agregar Horario" onAction="#agregarHorario"/>
        <Button text="Eliminar Horario" onAction="#eliminarHorario"/>
    </HBox>
</VBox>
