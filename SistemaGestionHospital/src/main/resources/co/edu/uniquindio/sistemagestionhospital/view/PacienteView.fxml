<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.sistemagestionhospital.viewController.PacienteViewController"
      spacing="15" alignment="CENTER" prefWidth="400" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Gestión de Pacientes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtId" promptText="ID del paciente" />
    <TextField fx:id="txtNombre" promptText="Nombre completo" />
    <TextField fx:id="txtCorreo" promptText="Correo electrónico" />
    <TextField fx:id="txtContrasena" promptText="Contraseña" />
    <TextField fx:id="txtCedula" promptText="Cédula" />

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnRegistrar" text="Registrar" />
        <Button fx:id="btnModificar" text="Modificar" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnEliminar" text="Eliminar" />
        <Button fx:id="btnHistorial" text="Ver Historial" />
    </HBox>

</VBox>
